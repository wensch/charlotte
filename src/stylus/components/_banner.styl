.banner-holder
	align-items center
	background-attachment fixed
	background-image url('../img/hero.jpg')
	background-size cover
	background-repeat no-repeat
	background-position center
	display flex
	height 100%
	justify-content center
	text-align center
	margin-top -52px

	.banner-content
		margin 130px 0 240px

	.icon-crown
		display block
		margin-bottom 20px

		&:before
			set-font($w-semibold, $size-big, $font-icon)
			color $white
			content "\e903"

	strong
		set-font($w-semibold, $size-regular, $font-mont)
		display block
		letter-spacing: 2.6px;

	.title
		set-font($w-semibold, $size-giant, $font-mont)
		border-bottom solid 2px
		border-top solid 2px
		box-sizing border-box
		letter-spacing 10.6px
		line-height 1em
		margin 10px 0
		padding 15px

	@media screen and (max-width: $mobile)
		.title
			font-size $size-wide

		strong
			font-size $size-small

	@media screen and (max-width: $mobile-medium)
		.banner-content
			margin 100px 0 240px

		.title
			font-size $size-medium
			padding 15px 6px

		strong
			font-size $size-normal

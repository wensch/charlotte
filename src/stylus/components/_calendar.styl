.flatpickr-input
	display none

.flatpickr-calendar
	set-font($w-regular, $size-tiny, $font-heb)
	border-radius 0
	border-top solid 2px $border
	box-shadow none
	padding-top 15px

	&:before,
	&:after
		display none

	.flatpickr-month
		color $title
		height 17px
		margin-bottom 20px

	.flatpickr-current-month
		padding 0

		.cur-month
			height auto
			font-size $size-normal
			font-weight $w-regular
			margin-left 0

		.cur-year
			font-size $size-normal
			font-weight $w-regular
			padding-left 13px

		.numInputWrapper
			padding-left 5px

			&:before
				content "/"
				font-size $size-normal
				position absolute
				top 4px

	.flatpickr-prev-month,
	.flatpickr-next-month
		height 15px
		padding-bottom 5px
		padding-top 0
		top 4px

		&:before
			set-font($w-bold, $size-little, $font-icon)
			color $highlight
			display block
			margin-top -2px

	.flatpickr-prev-month
		&:before
			content '\e900'

	.flatpickr-next-month
		&:before
			content '\e901'

		> svg
			display none

	.flatpickr-weekdays
		border-bottom solid 2px $border
		height 12px
		margin-bottom 8px
		padding-bottom 10px

	.flatpickr-weekday
		color $text
		font-size $size-tiny
		font-weight $w-bold

	.flatpickr-day
		margin-bottom 10px

		&.today
			border 0

		&.startRange,
		&.selected,
		&.inRange,
		&:hover
			background $price
			border-color $price
			color $white

		&.inRange
			box-shadow -5px 0 0 $price, 5px 0 0 $price

		&.startRange + .endRange
			box-shadow -10px 0 0 $price

			&:before
				left -6px

		&.endRange
			background-color $white
			border-radius 50%
			box-shadow -5px 0 0 #79bd1a, 0 0 0 #79bd1a
			color $price
			position relative

			&:before
				background-color $price
				content ""
				height 105%
				left -1px
				position absolute
				top -1px
				width 50%
				z-index -1

@media screen and (max-width: $mobile)
	.flatpickr-calendar.inline
		margin 0 auto

@media screen and (max-width: $mobile-medium)
	.flatpickr-calendar.inline,
	.flatpickr-days,
	.flatpickr-rContainer,
	.dayContainer
		max-width 310px
		min-width 250px
		width 100%

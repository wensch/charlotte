@media screen and (max-width: $mobile)
	.flatpickr-calendar.inline
		margin 0 auto

@media screen and (max-width: $mobile-medium)
	.flatpickr-calendar.inline,
	.flatpickr-days,
	.flatpickr-rContainer,
	.dayContainer
		max-width 310px
		min-width 250px
		width 100%

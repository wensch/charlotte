footer
	box-shadow 0 2px 20px 0 rgba(0,0,0,0.13)
	margin-top 70px
	padding 40px 10px
	text-align center

	.copyright
		p
			set-font($w-regular, $size-little, $font-heb)

.list-social
	display flex
	justify-content space-between
	margin 0 auto 30px
	max-width 147px

	li
		font-size 0

		a
			position relative
			transition-duration 0.3s
			transition-property transform

			&:after
				pointer-events none
				position absolute
				z-index -1
				content ''
				top 100%
				left 5%
				height 10px
				width 90%
				opacity 0
				background radial-gradient(ellipse at center, rgba(0, 0, 0, 0.35) 0%, transparent 80%)
				transition-duration 0.3s
				transition-property transform, opacity

			&:before
				set-font($w-bold, $size-large, $font-icon)
				color $highlight

				transform perspective(1px) translateZ(0)
				box-shadow 0 0 1px transparent

			&:hover
				&:after
					opacity 1
					transform translateY(5px)

				&:before
					transform translateY(-5px)

			&.icon-facebook:before
				content "\e904"

			&.icon-twitter:before
				content "\e908"

			&.icon-instagram:before
				content "\e905"
